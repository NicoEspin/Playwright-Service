{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    // üëá Recupera el comportamiento ‚Äúviejo‚Äù donde pod√©s usar import/export en CJS
    "moduleDetection": "legacy",
    "verbatimModuleSyntax": false,

    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
